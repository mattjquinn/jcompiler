program = _{ SOI ~ (stmt ~ "\n") * ~ stmt? ~ EOI }

stmt = _{ expr }

expr = { monadicExpr | dyadicExpr | term }
monadicExpr = _{ monadicVerb ~ term }
dyadicExpr = _{ term ~ (dyadicVerb ~ term)+ }
term = _{ number | "(" ~ expr ~ ")" }

monadicVerb = { ">:" }
dyadicVerb = { "+" | "*" }
number = { ASCII_DIGIT+ }

WHITESPACE = _{ " " | "\t" }
